<div class="mt-4 d-flex align-items-center flex-column text-center">

    <div>
        <div>
            <div class="main">
                    <div class="mt-3">
                        <img class="text-center img_profile mt-4"src="https://avatars.githubusercontent.com/{{ profile.pseudo_github }}" class="img-thumbnail" alt="...">
                    </div>
                <div class="circle1"></div>
                <div class="circle2"></div>
                <div class="circle3"></div>
                <div class="circle4"></div>
                <div class="circle5"></div>
            </div>
        </div>
        <div>
        </div>
    </div>

    <div class="row">
        <h1>{{profile.user.id}}</h1>
        <p>{{profile.username}}</p>
        <span class ="mb-3" style="font-size: 20px; color: black;">
            {% for question in questions %}
                {{ question.nbQuestion }}
            {% endfor %}
                <i title="" class="fas fa-question-circle"></i>
            {% for stat in stats %}
                {{ stat.nbAnswer }}
            {% endfor %}
                <i title="" class="fas fa-comment"></i>
            {% for like in likes %}
                {{ like.nbLike }}
            {% endfor %}
                <i title="" class="fas fa-thumbs-up"></i>
        </span>
    </div>
    <div>
        {% if profile.is_admin %}
            <div>
                <form method="POST">
                    <input type="text" value="{{ tag.name }}" class="form-control" id="exampleFormControlInput1" placeholder="Ajouter un tag" name="name">
                    <input class="btn btn-warning mt-2 mb-2" type="submit" value="Valider">
                </form>
            </div>
        {% endif %}
    </div>
</div>