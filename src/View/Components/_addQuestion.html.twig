<form method="post">
        <div class="container h-100">
            <input type="hidden" value="{{ question.id }}" name="id">
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label" >Titre</label>
                <input type="text"  value="{{ question.title }}" class="form-control" id="exampleFormControlInput1" placeholder="Rapide description de votre problème" name="title">
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Description de votre problème</label>
                <input type="text" value="{{ question.description }}" name="description" class="form-control" id="exampleFormControlTextarea1" rows="3" height-sm="line-height * 1em"> </input>
            </div>
            {% for tag in tags %}
                <div class="form-check">
                    <input name="tags[]" class="form-check-input" type="checkbox" value="{{ tag.id }}" id="flexCheckChecked">
                    <label class="form-check-label" for="flexCheckChecked">
                        {{ tag.name }}
                    </label>
                </div>
            {% endfor %}
            <input type="submit" value="Valider">
        </div>
</form>

