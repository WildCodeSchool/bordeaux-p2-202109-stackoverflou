{% extends 'layout.html.twig' %}

{% block content %}
        <form method="post">
                <input type="hidden" value="{{ answer.id }}" name="id">
                <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label" >Description</label>
                        <input type="text"  value="{{ answer.title }}" class="form-control" id="exampleFormControlInput1" placeholder="Votre réponse" name="title">
                </div>
                <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Description de votre problème</label>
                        <input type="text" value="{{ answer.description }}" name="description" class="form-control" id="exampleFormControlTextarea1" rows="3" height-sm="line-height * 1em"> </input>
                </div>
                <input type="submit" value="Valider">
        </form>
{% endblock %}
