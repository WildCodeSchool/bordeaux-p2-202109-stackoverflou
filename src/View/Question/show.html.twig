{% extends 'layout.html.twig' %}

{% block content %}

    <div class="container mt-5  h-100 bg-light pt-3 pb-3 mx-100 w-75 border rounded-3">
        <h1 class="mb-3">{{ question.title }}</h1>
        <h4 class="mt-3 font-weight-normal"> {{ profile.username }} {{ question.created_at|date("d/m/Y") }}</h4>

    </div>

    <div class="container mb-5 h-100 bg-light pt-3 pb-3 mx-100 w-75 border rounded-3">
        {% include 'Components/_tag.html.twig' %}
        <h2 class="mb-3"></h2>
        <p>{{ question.description|nl2br }}</p>
        {% if session.user.is_admin %}
        <a href="/questions/edit?id={{ question.id }}">Edit</a>
        {% endif %}
        {% include 'Components/_addAnswer.html.twig' %}
    </div>

    <div class="container mt-1 mb-5 h-100 bg-grey pt-1 pb-1 w-100">
        <ul class="mt-4">

            {% for answer in answers %}
                <li class="list-group-item">
                <form method="post" class="float-end mt-3" action="">
                    <input type="hidden" name="answerId" value={{ answer.answerId }}>
                    <button name="nbRank" class="fas fa-thumbs-up" value="{{ answer.ranking }}">
                        {{ answer.ranking }}
                    </button>

                </form>
                <h4 class="mt-3 font-weight-normal"> {{ answer.username }} {{ answer.created_at|date("d/m/Y") }}</h4>

                    <div>
                        {{ answer.description|raw }}
                    </div>
                    {% else %}
                    Pas encore de réponse, soyez le premier à rendre service !
                </li>
            {% endfor %}
        </ul>
    </div>


{% endblock %}

